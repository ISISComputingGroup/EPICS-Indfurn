record(ai, "$(P)P") {
    field(SCAN, "1 second")
    field(INP, "@indfurn.proto getP $(PORT)")
    field(DTYP, "stream")
    field(PREC, "2")
    field(EGU, "")
    
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:P")
    field(SDIS, "$(P)DISABLE")
}

record(ao, "$(P)P:SP") {
    field(OUT, "@indfurn.proto setP($(P)) $(PORT)")
    field(DTYP, "stream")
    field(PREC, "2")
    field(EGU, "")
    
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:P:SP")
    field(SDIS, "$(P)DISABLE")
}

#
# Simulation records
#

record(ao, "$(P)SIM:P") {
    field(VAL, "0")
    field(PINI, "YES")
}

alias("$(P)SIM:P", "$(P)SIM:P:SP")
