record(bo, "$(P)SIM") {
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
    field(PINI, "YES")
}

record(bo, "$(P)DISABLE") {
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

record(stringin, "$(P)VERSION") {
    field(INP, "@indfurn.proto getVersion $(PORT)")
    field(SCAN, "10 second")
    field(PINI, "YES")
    field(DTYP, "stream")
    
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:VERSION")
    field(SDIS, "$(P)DISABLE")
}



